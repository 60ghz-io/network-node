 configs/fb-ls1048a-puma_qspi_defconfig       |  9 ++++++---
 include/configs/fb_ls1048a_puma.h            | 20 ++++++++------------
 3 files changed, 26 insertions(+), 17 deletions(-)

diff --git a/board/freescale/fb_ls1048a_puma/uboot_ddr1.c b/board/freescale/fb_ls1048a_puma/uboot_ddr1.c
index ff8a05719f..3421256d7f 100644
--- a/board/freescale/fb_ls1048a_puma/uboot_ddr1.c
+++ b/board/freescale/fb_ls1048a_puma/uboot_ddr1.c
@@ -304,6 +304,17 @@ phys_size_t fixed_sdram(void)
         return ddr_size;
 }
 
+#ifdef CONFIG_TFABOOT
+int fsl_initdram(void)
+{
+	gd->ram_size = tfa_get_dram_size();
+
+	if (!gd->ram_size)
+		gd->ram_size = fsl_ddr_sdram_size();
+
+	return 0;
+}
+#else
 int fsl_initdram(void)
 {
         phys_size_t dram_size;
@@ -319,5 +330,4 @@ int fsl_initdram(void)
 
         return 0;
 }
-
-
+#endif /* CONFIG_TFABOOT */
